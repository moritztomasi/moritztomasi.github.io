<section class="pt-24">
  <h2 class="posts_list_label text-xl">Posts</h2>

  <div class="flex flex-col text-sm pt-4">
    {%- for post in collections.posts | reverse -%}
      <div class="flex flex-col md:flex-row">
        {% set absolutePostUrl %}{{ post.url | url  }}{% endset %}
        <span class="posts_list_date">{{ post.date | dateformat }}</span>
        <a class="posts_list_title md:ml-12 mb-4 md:mb-0" href="{{ post.url }}">{{ post.data.title }}</a>
      </div>
    {%- endfor -%}
  </div>
</section>