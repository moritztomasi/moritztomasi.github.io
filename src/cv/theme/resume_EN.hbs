<!doctype html>
<html>

<head>

	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, user-scalable=no, minimal-ui">

	<link href="https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css" rel="stylesheet">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css">

	<title>{{#resume.basics}}{{name}}{{/resume.basics}}</title>

	<style>
		.remove_last_margin:last-child {
			margin-bottom: 0;
		}

		section {
			page-break-inside: avoid;
		}

		@page {
			size: A4;
			margin-top: 40px;
			margin-bottom: 40px;
		}
	</style>

</head>

<body>
	<div class="container mx-auto text-xs font-sans max-w-screen-sm">
		<section class="mb-8">
			{{#resume.basics}}
			<h1 class="text-2xl font-semibold mb-2">{{name}}, {{label}}</h1>
			<p class="text-gray-600 text-xl mb-2">
				{{summary}}
			</p>
			{{/resume.basics}}
		</section>

		<section class="remove_last_margin mb-8">
			<h4 class="uppercase text-gray-500 font-semibold mb-4">Contact</h4>

			<div class="w-full flex flex-row">
				{{#resume.basics}}
				<div class="w-1/2">
					<p class="mb-2">
						{{#location}}
						<i class="fa fa-address-card mr-1"></i>{{address}}, {{postalCode}} {{city}}
						{{/location}}
					</p>
					<p class="mb-2">
						<i class="fa fa-phone mr-1"></i>{{phone}}
					</p>
					<p class="mb-2">
						<a href="mailto:{{email}}"><i class="fa fa-envelope mr-1"></i>{{email}}</a>
					</p>
					<p class="mb-2">
						<a href="https://{{website}}"><i class="fa fa-link mr-1"></i>{{website}}</a>
					</p>
				</div>
				<div class="w-1/2">
					{{#each profiles}}
					<p class="mb-2">
						<a href="{{url}}"><i class="{{faClass}} mr-1"></i>{{username}}</a>
					</p>
					{{/each}}
				</div>
				{{/resume.basics}}
			</div>
		</section>

		<section class="mb-8">
			<h4 class="uppercase text-gray-500 font-semibold mb-4">Work Experience</h4>

			{{#each resume.work}}
			<div class="remove_last_margin mb-4">
				<p class="uppercase font-semibold text-base mb-1">{{company}}</p>
				<p class="text-gray-700 mb-1">
					{{position}} | <i class="fas fa-map-marker-alt mr-1"></i>{{location}} | {{startDate}} - {{endDate}}
				</p>
				<p class="mb-1">
					{{summary}}
				</p>
				<ul class="list-disc ml-8">
					{{#each highlights}}
					<li>{{.}}</li>
					{{/each}}
				</ul>
			</div>
			{{/each}}
		</section>

		<section class="mb-8">
			<h4 class="uppercase text-gray-500 font-semibold mb-4">Education</h4>

			{{#each resume.education}}
			<div class="remove_last_margin mb-4">
				<p class="uppercase font-semibold text-base mb-1">{{institution}}</p>
				<p class="text-gray-700 mb-1">{{area}} {{studyType}} | {{startDate}} - {{endDate}}</p>
				<p>
					{{summary}}
				</p>
			</div>
			{{/each}}
		</section>

		<section class="mb-8">
			<h4 class="uppercase text-gray-500 font-semibold mb-4">Competencies</h4>
			<ul class="list-disc ml-8">
				{{#each resume.skills}}
				<li>{{name}}</li>
				{{/each}}
			</ul>
		</section>

		<section class="mb-8">
			<h4 class="uppercase text-gray-500 font-semibold mb-4">Languages</h4>
			<ul class="list-disc ml-8">
				{{#each resume.languages}}
				<li>{{language}} ({{fluency}})</li>
				{{/each}}
			</ul>
		</section>
	</div>
</body>

</html>