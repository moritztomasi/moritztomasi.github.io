<nav>
    <ul class="flex flex-col lg:flex-row">
        {%- for item in collections.all | eleventyNavigation -%}
            {%- set isCurrent = (item.url == page.url) -%}
            {%- set isParent = item.url != '/' and item.url in page.url -%}
            <li class="pr-6">
                <a href="{% if iscurrent %}#main{% else %}{{ item.url | url }}{% endif %}">
                    {{ item.title }}
                </a>
            </li>
        {%- endfor -%}
        <li @click="onToggleThemeSelector()" class="cursor-pointer pr-6">
            Themes
        </li>
    </ul>
</nav>