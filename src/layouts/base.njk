<!DOCTYPE html>
<html class="h-full" lang="{{ meta.lang }}">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{{ meta.title }}</title>

        {% include "meta.njk" %}
    </head>
    <body x-data="{ themeId: localStorage.getItem('themeId') || 'dark' }" x-bind:data-theme="themeId" class="w-full h-full flex flex-col font-mono text-white px-4 lg:px-0">
        {% include "header.njk" %}

        <aside class="absolute left-0 bg-white p-4" style="color: black">
            <p class="text-lg mb-4">Themes</p>
            <ul>
                {% for theme in themes %}
                    <li @click="themeId = '{{ theme.id }}'; localStorage.setItem('themeId', '{{ theme.id }}');" class="text-sm underline cursor-pointer">{{ theme.name }}</li>
                {% endfor %}
            </ul>
        </aside>

        <main class="container mx-auto max-w-2xl flex-1">
            {{ content | safe }}
        </main>

        {% include "footer.njk" %}
    </body>
</html>